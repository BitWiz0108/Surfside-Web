{% extends 'base.html.twig' %}
{% block title %}Supply{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row my-4">
            <div class="col-6">
                <h4>Supply</h4>
            </div>
            <div class="col-6 text-end">
                <a href="{{ path('app_supply_edit', {'id': supply.id}) }}" class="btn btn-primary btn-sm">Edit</a> <a href="{{ path('app_supply_index') }}" class="btn btn-secondary btn-sm">Back To List</a>
            </div>
        </div>
        <div class="row my-4">
            <div class="col-12">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ supply.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ supply.name }}</td>
                        </tr>
                        <tr>
                            <th>Units</th>
                            <td>{{ supply.units }}</td>
                        </tr>
                        <tr>
                            <th>Units_measurement</th>
                            <td>{{ supply.unitsMeasurement }}</td>
                        </tr>
                        <tr>
                            <th>Created</th>
                            <td>{{ supply.created ? supply.created|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Modified</th>
                            <td>{{ supply.modified ? supply.modified|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    {{ include('supply/_delete_form.html.twig') }}
{% endblock %}
