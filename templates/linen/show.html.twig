{% extends 'base.html.twig' %}
{% block title %}Linen{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row my-4">
            <div class="col-6">
                <h4>Linen</h4>
            </div>
            <div class="col-6 text-end">
                <a href="{{ path('app_linen_edit', {'id': linen.id}) }}" class="btn btn-primary btn-sm">Edit</a> <a href="{{ path('app_linen_index') }}" class="btn btn-secondary btn-sm">Back To List</a>
            </div>
        </div>
        <div class="row my-4">
            <div class="col-12">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ linen.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ linen.name }}</td>
                        </tr>
                        <tr>
                            <th>Units</th>
                            <td>{{ linen.units }}</td>
                        </tr>
                        <tr>
                            <th>Created</th>
                            <td>{{ linen.created ? linen.created|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Modified</th>
                            <td>{{ linen.modified ? linen.modified|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    {{ include('linen/_delete_form.html.twig') }}
{% endblock %}
