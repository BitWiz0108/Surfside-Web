{% extends 'base.html.twig' %}
{% block title %}Linen{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row my-4">
            <div class="col-6">
                <h4>{{ linen.name }}</h4>
            </div>
            <div class="col-6 text-end">
                 <a href="{{ path('app_linen_index') }}" class="btn btn-secondary btn-sm">Back To List</a>
            </div>
        </div>
        <div class="row my-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-6 text-start">Details</div>
                            <div class="col-6 text-end"><a href="{{ path('app_linen_edit', {'id': linen.id}) }}" class="btn btn-primary btn-sm">Edit</a></div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                Units On Hand: {{ linen.units }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row my-4">
            <div class="col-12 text-end">
                <small><strong>Created</strong>: {{ linen.created ? linen.created|date('Y-m-d H:i:s') : '' }} <strong>Modified</strong>: {{ linen.modified ? linen.modified|date('Y-m-d H:i:s') : '' }}</small>
            </div>
        </div>
    </div>
    {{ include('linen/_delete_form.html.twig') }}
{% endblock %}
